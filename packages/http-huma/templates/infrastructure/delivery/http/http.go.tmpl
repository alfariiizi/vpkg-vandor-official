package http

import (
	"log"

	"{{.ModuleName}}/internal/config"
	"{{.ModuleName}}/internal/delivery/http/route"
	"{{.ModuleName}}/internal/vpkg/vandor/http-huma/delivery/http/api"
	http "{{.ModuleName}}/internal/vpkg/vandor/http-huma/delivery/http/server"
	"github.com/go-chi/chi/v5"
	"go.uber.org/fx"
)

var Module = fx.Module(
	"http",
	fx.Provide(
		chi.NewMux,
		http.NewHttpServer,
		api.NewHttpApi,
	),
	route.Module,
	fx.Invoke(
		func(s *http.HttpServer) {
			cfg := config.GetConfig()
			log.Println("HTTP server is running on port ", cfg.HTTP.Port)
		},
	),
)